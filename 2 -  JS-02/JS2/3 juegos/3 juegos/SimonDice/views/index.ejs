<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simon Dice</title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid d-flex justify-content-center align-items-center min-vh-100">
        <div class="simon-container">
            <div class="simon-circle">
                <button class="simon-button green" id="green"></button>
                <button class="simon-button red" id="red"></button>
                <button class="simon-button yellow" id="yellow"></button>
                <button class="simon-button blue" id="blue"></button>
            </div>
            
            <div class="mt-3" id="display-mensaje"></div>
            <button id="start" class="mt-3">Iniciar Juego</button>
        </div>
    </div>

    <script src="/scripts/simonDice.js"></script>
</body>
</html>